.tabbar {
  position: fixed;
  width: 100%;
  height: 8%;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: white;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}

.tabbar .item {
  width: 33.33%;
  display: flex;
  justify-content: center;
  align-items: center;
}

.item .icon {
  width: 50rpx;
  height: 50rpx;
}

.text {
  width: 90%;
}

.question-container {
  display: flex;
  flex-flow: column nowrap;
}

.row {
  flex: 1;
  display: flex;
  height: 100%;
}

.row .text{
    flex: 1;
    width: 100%;
}